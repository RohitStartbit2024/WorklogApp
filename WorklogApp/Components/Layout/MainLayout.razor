@inherits LayoutComponentBase
@using WorklogApp.Services
@inject CurrentUserService CurrentUserService
@inject NavigationManager Navigation

@code {
    private bool _userLoaded = false;

    // Check if current page is the login page
    private bool IsLoginPage => Navigation.Uri.EndsWith("/");

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_userLoaded)
        {
            await CurrentUserService.LoadUserAsync();
            _userLoaded = true;
            StateHasChanged();
        }
    }

    private string DisplayName =>
        CurrentUserService.CurrentUser != null
            ? $"Welcome, {CurrentUserService.CurrentUser.FirstName} {CurrentUserService.CurrentUser.LastName}"
            : "Welcome, Guest";
}
@if (!IsLoginPage)
{
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row fw-bolder px-4" style="color:#6247aa">
                @DisplayName
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}
else
{
    <!-- Login page: fully inline, no side margins -->
    <div style="margin:0; padding:0; width:100%; height:100vh; display:flex; justify-content:center; align-items:center; background: linear-gradient(135deg, #6a11cb, #2575fc);">
        <div style="width:100%; max-width:400px; background-color: rgba(255,255,255,0.95); padding:2rem; border-radius:1rem; box-shadow: 0 8px 25px rgba(0,0,0,0.3);">
            @Body
        </div>
    </div>
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
